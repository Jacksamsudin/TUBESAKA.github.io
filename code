#include <iostream>
using namespace std;

// Fungsi iteratif
int totalIteratif(int data[], int n) {
    int total = 0;
    for (int i = 0; i < n; i++) {
        total = total + data[i];
    }
    return total;
}

// Fungsi rekursif
int totalRekursif(int data[], int n) {
    if (n == 0) {
        return 0;
    }
    return data[n - 1] + totalRekursif(data, n - 1);
}

int main() {
    int n;
    cout << "Masukkan jumlah hari: ";
    cin >> n;

    int data[n];
    cout << "Masukkan konsumsi listrik per hari(kwh):\n";
    for (int i = 0; i < n; i++) {
        cout << "Hari ke-" << i + 1 << ": ";
        cin >> data[i];
    }

    cout << "\nTotal konsumsi listrik (Iteratif): "
         << totalIteratif(data, n) << endl;

    cout << "Total konsumsi listrik (Rekursif): "
         << totalRekursif(data, n) << endl;

    return 0;
}
